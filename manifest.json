{
  "manifest_version": 3,
  "name": "Website Productivity Tracker",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["block.html", "block.js", "focus.js"],
    "matches": ["<all_urls>"]
  }],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}